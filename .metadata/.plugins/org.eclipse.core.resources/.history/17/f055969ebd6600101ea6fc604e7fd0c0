package oop;

public class Player {
	int Number;
	int diceNumber1;
	int diceNumber2;
	int diceNumber3;
	int location;
	
	int dicePlay() {
		System.out.println("플레이어" + Number + "(위치 " 
		+ location + ") 턴, " + "주사위를 굴립니다.");
		
		diceNumber1 = (int) Math.random();
		System.out.println("주사위1 : " + diceNumber1);
		diceNumber2 = (int) Math.random();
		System.out.println("주사위2 : " + diceNumber2);
		diceNumber3 = (int) Math.random();
		System.out.println("주사위3 : " + diceNumber3);
		
		if((diceNumber1 + diceNumber2 + diceNumber3) == 9
			&& location == 1
		   ) {
			location = 10;
		}
		if(location % 17 == 0) {
			location -= 6;
		}
		if(location % 23 == 0) {
			location += 3;
		}
		if(!(diceNumber1 == diceNumber2
		   && diceNumber2 == diceNumber3)) { // 하나라도 다른 경우
			location += (diceNumber1 + diceNumber2 + diceNumber3);
		}
		else { // 모두 같은 경우
			location += (diceNumber1 + diceNumber2 + diceNumber3); // 합의 배수?
		}
		//location += diceNumber;
		return location;
	}
}
